<window>
	<defaultcontrol always="true">120</defaultcontrol>
	<allowoverlays>false</allowoverlays>
	<coordinates>
		<system>1</system>
		<posx>150</posx>
		<posy>70</posy>
	</coordinates>
	<controls>

		<control type="image">
			<posx>-10</posx>
			<posy>-8</posy>
			<width>980</width>
			<height>560</height>
			<texture>serviceinfo-main.png</texture>
			<animation effect="fade" time="200">WindowOpen</animation>
			<animation effect="fade" time="200">WindowClose</animation>
		</control>

		<control type="label">
			<description>textarea</description>
			<posx>0</posx>
			<posy>-7</posy>
			<width>980</width>
			<visible>true</visible>
			<label>[B]Polish Live TV - services status[/B]</label>
			<font>font11</font>
			<textcolor>orange</textcolor>
			<align>center</align>
		</control>
		<control type="group">
			<posx>0</posx>
			<posy>10</posy>
			<!-- Button Group -->
			<control type="button" id="117">
				<description>Exit</description>
				<posx>0</posx>
				<posy>450</posy>
				<height>70</height>
				<width>120</width>
				<align>center</align>
				<aligny>top</aligny>
				<textoffsety>45</textoffsety>
				<label>SCRIPT107</label>
				<font>font12_title</font>
				<onright>120</onright>
				<onup>120</onup>
				<texturefocus>serviceinfo-exit-focus.png</texturefocus>
				<texturenofocus>serviceinfo-exit-nofocus.png</texturenofocus>
				<ondown>120</ondown>
			</control>
		</control>
		<control type="list" id="120">
			<description>Services list</description>
			<posx>135</posx>
			<posy>35</posy>
			<width>800</width>
			<height>500</height>
			<viewtype label="Services List">list</viewtype>
			<orientation>vertical</orientation>
			<visible>true</visible>
			<onleft>117</onleft>
			<onright>117</onright>
			<itemlayout width="560" height="70">
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>800</width>
					<height>70</height>
					<texture>serviceinfo-list-bg.png</texture>
				</control>
				<control type="label">
					<posx>20</posx>
					<posy>0</posy>
					<width>760</width>
					<height>20</height>
					<label>$INFO[ListItem.label]</label>
					<font>font11</font>
				</control>
				<control type="label">
					<posx>20</posx>
					<posy>40</posy>
					<width>760</width>
					<height>20</height>
					<label>$INFO[ListItem.label2]</label>
					<font>font10</font>

				</control>
			</itemlayout>
			<focusedlayout width="560" height="70">
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>800</width>
					<height>70</height>
					<visible>Control.HasFocus(120)</visible>
					<texture border="5">list-bg-selected.png</texture>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>800</width>
					<height>70</height>
					<visible>!Control.HasFocus(120)</visible>
					<texture border="5">serviceinfo-list-bg-selected-nofocus.png</texture>
				</control>
				<control type="label">
					<posx>20</posx>
					<posy>0</posy>
					<width>760</width>
					<height>20</height>
					<label>$INFO[ListItem.label]</label>
					<scroll>true</scroll>
					<font>font11</font>
				</control>
				<control type="label">
					<posx>20</posx>
					<posy>40</posy>
					<width>760</width>
					<height>20</height>
					<label>$INFO[ListItem.label2]</label>
					<font>font10</font>

				</control>
			</focusedlayout>
		</control>
	</controls>
</window>
